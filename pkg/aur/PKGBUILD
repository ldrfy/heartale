# Maintainer: yuhldr <yuhldr@gmail.com>
pkgname=@APP_NAME@
pkgver=@VERSION@
pkgrel=1
pkgdesc="@APP_DES@"
arch=('any')
url="@PACKAGE_URL@"
license=('GPL3')
depends=(@DEPS@)
makedepends=(@BUILD_DEPS@)
checkdepends=('appstream-glib')
source=(@APP_NAME@-@VERSION@.zip)
sha256sums=("SKIP")


build() {
  cd ${pkgname}-${pkgver}
  meson setup _build --prefix="/usr"
  meson compile -C _build
}

check() {
  cd ${pkgname}-${pkgver}
  meson test -C _build --print-errorlogs
}

package() {
  cd ${pkgname}-${pkgver}
  meson install -C _build --destdir "$pkgdir"
}
