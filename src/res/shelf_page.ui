<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.96.1 -->
<interface>
  <!-- interface-name shelf_page.ui -->
  <requires lib="adw" version="1.7"/>
  <requires lib="gio" version="2.0"/>
  <requires lib="gtk" version="4.14"/>
  <requires lib="libadwaita" version="1.7"/>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="action">app.find_update</attribute>
        <attribute name="label" translatable="yes">Check for updates</attribute>
      </item>
      <item>
        <attribute name="action">app.preferences</attribute>
        <attribute name="label" translatable="yes">_Preferences</attribute>
      </item>
      <item>
        <attribute name="action">app.shortcuts</attribute>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
      </item>
      <item>
        <attribute name="action">app.about</attribute>
        <attribute name="label" translatable="yes">_About Heartale</attribute>
      </item>
    </section>
  </menu>
  <template class="ShelfPage" parent="AdwNavigationPage">
    <property name="tag">shelf</property>
    <property name="title" translatable="yes">Bookshelf</property>
    <child>
      <object class="AdwToolbarView">
        <property name="content">
          <object class="GtkBox" id="gb_bookshelf">
            <property name="orientation">vertical</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkRevealer" id="rev_search">
                <property name="reveal-child" bind-source="btn_show_search" bind-property="active" bind-flags="bidirectional|sync-create" />

                <child>
                  <object class="GtkSearchEntry" id="search">
                    <property name="margin-end">36</property>
                    <property name="margin-start">36</property>
                    <property name="placeholder-text" translatable="yes">Search titles…</property>
                    <property name="width-chars">20</property>
                    <signal name="search-changed" handler="_on_search_changed"/>
                    <!-- 按 Esc 或点叉触发 -->
                    <signal name="stop-search" handler="_on_search_stop"/>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="AdwViewStack" id="stack">
                <child>
                  <object class="AdwStatusPage" id="search_empty">
                    <property name="description" translatable="yes">Try another keyword or clear the search to try again.</property>
                    <property name="icon-name">system-search-symbolic</property>
                    <property name="title" translatable="yes">No matching books</property>
                    <child>
                      <object class="GtkBox">
                        <property name="halign">center</property>
                        <property name="orientation">horizontal</property>
                        <property name="spacing">8</property>
                        <child>
                          <object class="GtkButton" id="btn_clear_search">
                            <signal name="clicked" handler="_on_clear_search"/>
                            <child>
                              <object class="AdwButtonContent">
                                <property name="icon-name">edit-clear-symbolic</property>
                                <property name="label" translatable="yes">Clear search</property>
                              </object>
                            </child>
                            <style>
                              <class name="suggested-action"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton">
                            <signal name="clicked" handler="_on_import_book"/>
                            <child>
                              <object class="AdwButtonContent">
                                <property name="icon-name">document-open-symbolic</property>
                                <property name="label" translatable="yes">Import books</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwStatusPage" id="empty">
                    <property name="description" translatable="yes">No books yet. Click the button below or drag files here to start reading.</property>
                    <property name="icon-name">cool.ldr.heartale</property>
                    <property name="title" translatable="yes">Welcome to Heartale</property>
                    <child>
                      <object class="GtkButton" id="btn_import">
                        <property name="halign">center</property>
                        <signal name="clicked" handler="_on_import_book"/>
                        <child>
                          <object class="AdwButtonContent">
                            <property name="icon-name">document-open-symbolic</property>
                            <property name="label" translatable="yes">Import books</property>
                          </object>
                        </child>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>

                <child>
                <object class="AdwOverlaySplitView" id="aos_shelf">
                    <property name="sidebar-position">end</property>
                    <property name="min-sidebar-width">255</property>
                    <property name="show-sidebar" bind-source="properties_button" bind-property="active" bind-flags="bidirectional|sync-create" />
                    <property name="sidebar">
                        <object class="HPropertiesView" id="hpv_book" />
                    </property>
                    <property name="content">
                        <object class="GtkScrolledWindow" id="scroller">
                            <property name="child">
                            <object class="GtkListView" id="list">
                                <property name="single-click-activate">false</property>
                                <signal name="activate" handler="_on_shelf_activate"/>
                                <style>
                                <class name="navigation-sidebar"/>
                                </style>
                            </object>
                            </property>
                            <property name="hexpand">true</property>
                            <property name="vexpand">true</property>
                        </object>
                    </property>
                </object>
                </child>

              </object>
            </child>

            <child>
            <object class="GtkLabel" id="gl_shelf_read_time">
                <property name="label" translatable="yes">Hello, World!</property>
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="wrap">true</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
            </object>
            </child>

          </object>
        </property>
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="subtitle" translatable="yes">Select a book to start reading</property>
                <property name="title" translatable="yes">Bookshelf</property>
              </object>
            </property>
            <child type="start">
              <object class="GtkToggleButton" id="btn_show_search">
                <property name="icon-name">system-search-symbolic</property>
                <property name="tooltip-text" translatable="yes">Search</property>
                <signal name="toggled" handler="_on_search_toggle"/>
              </object>
            </child>
                <child type="end">
                  <object class="GtkToggleButton" id="properties_button">
                    <property name="icon-name">info-outline-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Image Properties</property>
                  </object>
                </child>
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
                <property name="primary">True</property>
                <property name="tooltip-text" translatable="yes">Main Menu</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton">
                <property name="icon-name">document-open-symbolic</property>
                <property name="tooltip-text" translatable="yes">Import local books</property>
                <signal name="clicked" handler="_on_import_book"/>
              </object>
            </child>
            <child type="end">
              <object class="GtkBox" id="sync_box">
                <property name="orientation">horizontal</property>
                <child>
                  <object class="GtkButton" id="btn_sync">
                    <property name="icon-name">folder-remote-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Sync Legado books</property>
                    <signal name="clicked" handler="_on_import_book_legado"/>
                  </object>
                </child>
                <child>
                  <object class="GtkSpinner" id="spinner_sync">
                    <property name="margin-end">8</property>
                    <property name="valign">center</property>
                    <property name="visible">false</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
