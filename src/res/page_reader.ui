<?xml version='1.0' encoding='UTF-8'?>
<!-- page_reader.ui -->
<interface>
  <requires lib="Adw" version="1.4"/>
  <requires lib="gtk" version="4.0"/>

  <!-- 垂直 Adjustment：用于监听滚动并触发 on_reader_vadj_value_changed -->
  <object class="GtkAdjustment" id="reader_vadj">
    <property name="lower">0</property>
    <property name="upper">100</property>
    <property name="step-increment">1</property>
    <property name="page-increment">10</property>
    <property name="page-size">10</property>
    <signal name="value-changed" handler="on_reader_vadj_value_changed" swapped="no"/>
  </object>

  <template class="ReaderPage" parent="AdwNavigationPage">
    <property name="title" translatable="yes">书籍</property>
    <property name="can-pop">True</property>

    <property name="child">
      <!-- 用 AdwOverlaySplitView 取代 GtkPaned -->
      <object class="AdwOverlaySplitView" id="split_view">
        <!-- 侧栏宽度可调，窄屏自动覆盖到内容上 -->
        <property name="show-sidebar">True</property>
        <property name="min-sidebar-width">200</property>
        <property name="max-sidebar-width">260</property>

        <!-- 侧栏（目录） -->
        <child type="sidebar">
          <object class="GtkScrolledWindow" id="scroll_chap_name">
            <property name="vexpand">True</property>
            <property name="hexpand">False</property>
            <property name="min-content-width">200</property>
            <child>
              <object class="GtkListBox" id="nav_list">
                <property name="selection-mode">single</property>
                <signal name="row-activated" handler="on_nav_row_activated"/>
              </object>
            </child>
          </object>
        </child>

        <!-- 内容区（正文） -->
        <child type="content">
          <object class="GtkScrolledWindow" id="scroll_content">
            <!-- 把上面声明的 Adjustment 赋给垂直滚动条 -->
            <property name="vadjustment">reader_vadj</property>
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <child>
              <object class="GtkTextView" id="text_view">
                <property name="editable">False</property>
                <property name="wrap-mode">word-char</property>
                <property name="left-margin">12</property>
                <property name="right-margin">12</property>
                <property name="top-margin">8</property>
                <property name="bottom-margin">8</property>
              </object>
            </child>
          </object>
        </child>

      </object>
    </property>
  </template>
</interface>
