<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.96.1 -->
<interface>
  <!-- interface-name reader_page.ui -->
  <requires lib="adw" version="1.4"/>
  <requires lib="gtk" version="4.12"/>
  <requires lib="libadwaita" version="1.4"/>
  <template class="ReaderPage" parent="AdwNavigationPage">
    <property name="tag">reader</property>
    <property name="title">阅读</property>
    <child>
      <object class="AdwToolbarView">
        <property name="content">
          <object class="AdwViewStack" id="stack">
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <child>
              <object class="AdwStatusPage" id="page_loading">
                <property name="description">正在解析书籍与目录…</property>
                <property name="icon-name">content-loading-symbolic</property>
                <property name="title">正在加载</property>
                <child>
                  <object class="GtkBox">
                    <property name="halign">center</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <property name="valign">center</property>
                    <child>
                      <object class="GtkSpinner">
                        <property name="height-request">32</property>
                        <property name="spinning">true</property>
                        <property name="width-request">32</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="btn_cancel">
                        <property name="label">取消</property>
                        <signal name="clicked" handler="_on_cancel_load_book"/>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwStatusPage" id="page_error">
                <property name="description">无法打开本书或目录，请重试或返回。</property>
                <property name="icon-name">dialog-error-symbolic</property>
                <property name="title">加载失败</property>
                <child>
                  <object class="GtkBox">
                    <property name="halign">center</property>
                    <property name="orientation">horizontal</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkButton" id="btn_retry">
                        <property name="label">重试</property>
                        <signal name="clicked" handler="_on_retry_load"/>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton">
                        <property name="label">返回书架</property>
                        <signal name="clicked" handler="_on_cancel_load_book"/>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwOverlaySplitView" id="aos_reader">
                <property name="content">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="GtkScrolledWindow" id="gsw_text">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <child>
                          <object class="GtkTextView" id="gtv_text">
                            <property name="bottom-margin">12</property>
                            <property name="editable">false</property>
                            <property name="left-margin">18</property>
                            <property name="right-margin">18</property>
                            <property name="top-margin">12</property>
                            <property name="wrap-mode">word-char</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="halign">center</property>
                        <property name="orientation">horizontal</property>
                        <property name="spacing">64</property>
                        <child>
                          <object class="GtkButton" id="btn_clear_search">
                            <property name="margin-bottom">8</property>
                            <property name="margin-top">8</property>
                            <signal name="clicked" handler="_on_last_chap"/>
                            <child>
                              <object class="AdwButtonContent">
                                <!-- <property name="label">上一章</property> -->
                                <property name="icon-name">go-up-symbolic</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton">
                            <property name="margin-bottom">8</property>
                            <property name="margin-top">8</property>
                            <signal name="clicked" handler="_on_next_chap"/>
                            <child>
                              <object class="AdwButtonContent">
                                <!-- <property name="label">下一章</property> -->
                                <property name="icon-name">go-down-symbolic</property>
                              </object>
                            </child>
                            <style>
                              <class name="suggested-action"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
                <property name="hexpand">true</property>
                <property name="show-sidebar">true</property>

                <property name="sidebar">
                <object class="GtkBox" id="gb_toc">
                    <property name="orientation">vertical</property>
                    <property name="vexpand">true</property>
                    <property name="hexpand">true</property>
                    <child>
                    <object class="GtkRevealer" id="gr_toc">
                        <property name="reveal-child">false</property>
                        <child>
                        <object class="GtkSearchEntry" id="gse_toc">
                            <property name="margin-end">36</property>
                            <property name="margin-start">36</property>
                            <property name="placeholder-text">搜索目录…</property>
                            <property name="width-chars">20</property>
                            <signal name="search-changed" handler="_on_search_toc_changed"/>
                            <!-- 按 Esc 或点叉触发 -->
                            <signal name="stop-search" handler="_on_search_toc_stop"/>
                        </object>
                        </child>
                    </object>
                    </child>

                    <child>
                    <object class="GtkScrolledWindow">
                        <property name="vexpand">true</property>
                        <property name="hexpand">true</property>
                        <child>
                        <object class="GtkListView" id="toc">
                            <property name="single-click-activate">false</property>
                            <property name="vexpand">true</property>
                            <property name="hexpand">true</property>
                        </object>
                        </child>
                    </object>
                    </child>
                </object>
                </property>

                <property name="vexpand">true</property>
              </object>
            </child>
          </object>
        </property>
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="title-widget">
                <object class="GtkButton">
                <property name="valign">center</property>
                <property name="has-frame">false</property>
                <property name="can-focus">false</property>
                <style>
                    <class name="flat"/>
                </style>
                <property name="valign">center</property>
                <signal name="clicked" handler="_on_click_title"/>
                <child>
                    <object class="AdwWindowTitle" id="title">
                    <property name="title">书名</property>
                    <property name="subtitle">章节标题</property>
                    </object>
                </child>
                </object>
            </property>
            <child type="start">
            <object class="GtkToggleButton" id="btn_show_search">
                <property name="icon-name">system-search-symbolic</property>
                <property name="tooltip-text">搜索</property>
                <property name="active">false</property>
                <signal name="clicked" handler="_on_show_search_toc"/>
              </object>
            </child>

            <child type="start">
              <object class="GtkToggleButton" id="btn_toggle_sidebar">
                <property name="icon-name">sidebar-show-symbolic</property>
                <property name="tooltip-text">显示/隐藏目录</property>
                <signal name="clicked" handler="_on_toggle_sidebar"/>
              </object>
            </child>
            <child type="start">
              <object class="GtkSpinner" id="spinner_sync">
                <property name="margin-end">8</property>
                <property name="margin-start">8</property>
                <property name="valign">center</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton" id="btn_settings">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="popover">
                  <object class="GtkPopover" id="popover_settings">
                    <child>
                      <object class="GtkBox" id="popover_box">
                        <property name="can-focus">False</property>
                        <property name="focusable">False</property>
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>

                        <child>
                        <object class="AdwSpinRow" id="spin_f">
                            <signal name="output" handler="_on_fontsize_changed"/>
                            <property name="icon-name">format-text-bold-symbolic</property>
                            <property name="subtitle" translatable="yes">_Font Size</property>
                            <property name="title">字体大小</property>
                            <property name="adjustment">
                                <object class="GtkAdjustment">
                                <property name="lower">0</property>
                                <property name="upper">72</property>
                                <property name="value">14</property>
                                <property name="page-increment">5</property>
                                <property name="step-increment">1</property>
                                </object>
                            </property>
                        </object>
                        </child>



                        <child>
                        <object class="AdwSpinRow" id="spin_l">
                            <signal name="output" handler="_on_line_space_changed"/>
                            <property name="icon-name">format-text-italic-symbolic</property>
                            <property name="subtitle" translatable="yes">_Line Space</property>
                            <property name="title">行间距</property>
                            <property name="adjustment">
                                <object class="GtkAdjustment">
                                <property name="lower">0</property>
                                <property name="upper">30</property>
                                <property name="value">10</property>
                                <property name="page-increment">5</property>
                                <property name="step-increment">1</property>
                                </object>
                            </property>
                        </object>
                        </child>


                        <child>
                        <object class="AdwSpinRow" id="spin_p">
                            <signal name="output" handler="_on_paragraph_space_changed"/>
                            <property name="icon-name">format-text-strikethrough-symbolic</property>
                            <property name="subtitle" translatable="yes">_Paragraph Space</property>
                            <property name="title">段间距</property>
                            <property name="adjustment">
                                <object class="GtkAdjustment">
                                <property name="lower">0</property>
                                <property name="upper">40</property>
                                <property name="value">0</property>
                                <property name="page-increment">5</property>
                                <property name="step-increment">1</property>
                                </object>
                            </property>
                        </object>
                        </child>


                      </object>
                    </child>
                  </object>
                 </property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton">
                <property name="icon-name">media-playback-start-symbolic</property>
                <property name="tooltip-text">朗读</property>
                <signal name="clicked" handler="_on_read_aloud"/>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
