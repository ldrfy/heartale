<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="HPropertiesView" parent="AdwBin">
    <property name="child">
      <object class="GtkScrolledWindow">
        <property name="propagate-natural-height">True</property>
        <property name="max-content-height">316</property>
        <property name="child">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">24</property>
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <child>
              <object class="AdwPreferencesGroup">
                <child>
                  <object class="AdwActionRow" id="aar_folder">
                    <property name="title" translatable="yes">Folder</property>
                    <property name="activatable-widget">folder_button</property>
                    <property name="use-markup">False</property>
                    <child type="suffix">
                      <object class="GtkButton" id="folder_button">
                        <property name="valign">center</property>
                        <!-- <property name="action-name">properties.open-folder</property> -->
                        <signal name="clicked" handler="_on_open_file"/>

                        <property name="icon-name">folder-open-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Open Containing Folder</property>
                        <style>
                          <class name="flat" />
                        </style>
                      </object>
                    </child>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="aar_book_uri">
                    <property name="title" translatable="yes">URI</property>
                    <property name="subtitle-selectable">True</property>
                    <property name="subtitle-lines">1</property>
                    <property name="use-markup">False</property>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup" id="details">
                <property name="title" translatable="yes" >Reading Time</property>
                <child>
                  <object class="AdwActionRow" id="read_time_day">
                    <property name="title" translatable="yes" >Today</property>
                    <property name="subtitle-selectable">True</property>
                    <property name="use-markup">False</property>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="read_time_week">
                    <property name="title" translatable="yes">This Week</property>
                    <property name="subtitle-selectable">True</property>
                    <property name="use-markup">False</property>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="read_time_month">
                    <property name="title" translatable="yes">This Month</property>
                    <property name="subtitle-selectable">True</property>
                    <property name="use-markup">False</property>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="read_time_year">
                    <property name="title" translatable="yes">This Year</property>
                    <property name="subtitle-selectable">True</property>
                    <property name="use-markup">False</property>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="read_time_all">
                    <property name="title" translatable="yes">All</property>
                    <property name="subtitle-selectable">True</property>
                    <property name="use-markup">False</property>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes" >Details</property>

                <child>
                  <object class="AdwActionRow" id="aar_book_txt_all">
                    <property name="title" translatable="yes">txt number</property>
                    <property name="subtitle-selectable">True</property>
                    <property name="use-markup">False</property>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>

                <child>
                  <object class="AdwActionRow" id="aar_book_fmt">
                    <property name="title" translatable="yes">Format</property>
                    <property name="subtitle-selectable">True</property>
                    <property name="use-markup">False</property>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="aar_file_size">
                    <property name="title" translatable="yes">File Size</property>
                    <property name="subtitle-selectable">True</property>
                    <property name="use-markup">False</property>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup" id="dates">
                <property name="title" translatable="yes" >Date</property>
                <child>
                  <object class="AdwActionRow" id="file_created">
                    <property name="title" translatable="yes">File Created</property>
                    <property name="subtitle-selectable">True</property>
                    <property name="use-markup">False</property>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="file_modified">
                    <property name="title" translatable="yes">File Modified</property>
                    <property name="subtitle-selectable">True</property>
                    <property name="use-markup">False</property>
                    <style>
                      <class name="property" />
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
